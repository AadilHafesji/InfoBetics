<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="5dp"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    app:cardBackgroundColor="#FCD440">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp">

        <TextView
            android:id="@+id/retrieveBGAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BG: "
            android:maxLines="1"
            android:layout_toStartOf="@id/retrieveInsulinAmount"
            android:layout_alignParentStart="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:ellipsize="end"
            android:layout_toLeftOf="@id/retrieveInsulinAmount"
            android:layout_alignParentLeft="true" />

        <TextView
            android:id="@+id/retrieveCarbAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Carbohydrate: "
            android:maxLines="1"
            android:layout_below="@id/retrieveBGAmount"
            android:layout_alignParentStart="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:ellipsize="end"
            android:layout_alignParentLeft="true" />

        <TextView
            android:id="@+id/retrieveInsulinAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Insulin: "
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:layout_alignParentRight="true" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>